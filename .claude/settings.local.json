{
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(timeout:*)"
    ],
    "deny": [],
    "ask": []
  },
  "enabledMcpjsonServers": [
    "browsermcp"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd backend && python -c \"from app import create_app; app = create_app('development'); app.run(debug=False, host='0.0.0.0', port=5000)\" &"
          },
          {
            "type": "command",
            "command": "cd frontend && npm run dev &"
          }
        ]
      }
    ]
  }
}