# Backend .env configuration example
# Copy this file to backend/.env and modify with your local settings

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/erp_production
DATABASE_URL_FALLBACK=sqlite:///erp_test.db

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Server Configuration
DEBUG=False
TESTING=False
