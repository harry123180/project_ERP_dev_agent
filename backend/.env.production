# Flask Configuration - Production
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-change-this
JWT_SECRET_KEY=your-production-jwt-secret-key-change-this

# Database Configuration - PostgreSQL for Production
DATABASE_URL=postgresql://erp_user:secure_password@localhost:5432/erp_production

# Redis Configuration - Production
REDIS_URL=redis://localhost:6379/0

# CORS Configuration - Production domains
CORS_ORIGINS=https://erp.company.com,https://erp-admin.company.com

# Application Settings
DEBUG=false
SQLALCHEMY_ECHO=false

# Security Settings
SSL_REQUIRED=true
HTTPS_ONLY=true

# Performance Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=20
SQLALCHEMY_ENGINE_OPTIONS_MAX_OVERFLOW=30