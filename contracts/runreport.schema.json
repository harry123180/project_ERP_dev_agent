{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["schema_version", "summary", "tests", "artifacts"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "generated_by": { "type": "string" },
    "summary": { "type": "string" },
    "static_checks": {
      "type": "object",
      "properties": {
        "lint": { "enum": ["pass", "fail"] },
        "typecheck": { "enum": ["pass", "fail"] },
        "notes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "tests": {
      "type": "object",
      "properties": {
        "unit": { "enum": ["pass", "fail"] },
        "integration": { "enum": ["pass", "fail"] },
        "e2e": { "enum": ["pass", "fail"] },
        "failed_cases": { "type": "array", "items": { "type": "string" } }
      }
    },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
